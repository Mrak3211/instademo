<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Request</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
    <%- include('common/nav') -%>
        <style>
            body {
                background-color: #f8f8f8;
                margin-top: 100px;
            }

            .container {
                max-width: 600px;
                margin: 0 auto;
                padding: 20px;
            }

            .card {
                transition: transform 0.3s;
            }

            .card-img-top {
                height: 200px;
                object-fit: cover;
            }

            h2 {
                margin-bottom: 20px;
                color: #333;
            }

            p {
                margin-bottom: 10px;
                color: #555;
            }

            .btn-accept {
                color: white;
                background-color: green;
                border-color: green;
            }

            .btn-decline {
                color: white;
                background-color: red;
                border-color: red;
            }
        </style>
</head>

<body>
        <div class="container">
            <% if (connection.length===0) { %>
                <p>No user profile found.</p>
                <% } else { %>
                    <% connection.forEach(function(details) { %>
                        <% if (!(details.status==='Accept' ) && !(details.status==='Decline' )) { %>
                            <div class="card">
                                <div class="card-body">
                                    <h2 class="card-title">Name: <%= details.senderId.name %>
                                    </h2>
                                    <p class="card-text">Username: <%= details.senderId.username %>
                                    </p>
                                    <div class="btn-group">
                                        <a href="<%= `/${details._id}/Accept` %>">
                                            <button class="btn btn-accept">Accept</button>
                                        </a>
                                        <a href="<%= `/${details._id}/Decline` %>">
                                            <button class="btn btn-decline">Decline</button>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                                <% }) %>
                                    <% } %>
        </div>
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>