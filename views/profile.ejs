<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>InstaDemo profile</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <title>Bootstrap Example</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <%- include('common/nav') -%>
        <style>
            body {
                background-color: #f8f8f8;
                margin-top: 100px;
            }

            .container {
                max-width: 600px;
                margin: 0 auto;
                padding: 20px;
            }

            .card {
                transition: transform 0.3s;
            }


            .card-img-top {
                height: 200px;
                object-fit: cover;
            }

            h2 {
                margin-bottom: 20px;
                color: #333;
            }

            p {
                margin-bottom: 10px;
                color: #555;
            }

            .edit-button {
                margin-top: 20px;
            }
        </style>
</head>

<body class="p-3 m-5 border-0 bd-example m-0 border-0 bd-example-row">
        <div class="container">
            <% if (user) { %>
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Welcome, <%= user.name %>
                        </h2>
                        <p class="card-text">Email: <%= user.email %>
                        </p>
                        <p class="card-text">Phone Number: <%= user.phoneNo %>
                        </p>
                        <p class="card-text">Date of Birth: <%= user.DateOfBirth %>
                        </p>
                        <a href="/updateProfile" class="btn btn-primary edit-button">Edit Profile</a>

                    </div>
                    <div class="container text-center">
                        <div class="row">
                            <div class="col">
                                Following : <%= followingCount %>
                            </div>
                            <div class="col">
                                Followers : <%= followerCount %>
                            </div>
                        </div>
                    </div>
                </div>
                <% } else { %>
                    <p>No user profile found.</p>
                    <% } %>
        </div>

        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>